<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Toy-shop</title>

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css"></head>
    <link rel="stylesheet" href="/style/main.css" class="css">
</head>
<body>
    <%- include("partials/header.ejs") %>

    <section class="swapper" id="swapper">

    <div class="slides">
        <img src="images/school-bus.jpg" alt="" class="previo">
        <img src="images/dices.jpg" alt="" class="previo">
        <img src="images/kids-playing.jpg" alt="" class="previo">
    </div>

    <div class="arrows">            
       <button onclick="prevSlide()"><i class="fa fa-chevron-left left-arrow"></i></button>
       <button onclick="nextSlide()"><i class="fa fa-chevron-right right-arrow"></i></button>
    </div>
    </section>

    <section class="main">
      <div class="main-header">
      <label for="input">Search for product:</label>
      <input class="search-bar" type="text" placeholder="for example: bear" id="myInput" onkeyup="search()">
      </div>
    <div class="product" id="product">
        
<% products.forEach(product => { %>
  <div class="product-container">
    <div class="productImg">
     <% if (product.imgUrl) { %>
  <img src="<%= product.imgUrl %>" alt="<%= product.name %>" />
<% } else { %>
  <p>No image available</p>
<% } %>
    </div>
    <div class="productName"><h3><%= product.name %></h3></div>
    <div class="productDesc"><%= product.description %></div>
    <div class="productPrice"><%= product.price %></div>

    <div class="btns" id="btns">
        <div class="addCard"><button class="add-cart">add to card</button></div>
        <div class="addWishlist"><button class="add-wish">add to wishlist</button></div>
    </div>
  </div>
<% }) %>
    </div>
    </section>
        <%- include("partials/footer.ejs") %>
    <script src="/script/script.js"></script>
</body>
</html>